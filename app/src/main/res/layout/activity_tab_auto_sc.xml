<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOP BAR -->

        <TextView
            android:id="@+id/sc_form_auto_match_timer"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="mm:ss"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/round_rectangle_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sc_form_auto_team_num"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sc_form_auto_team_num"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Team #"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/round_rectangle_20"
            app:layout_constraintStart_toEndOf="@id/sc_form_auto_match_timer"
            app:layout_constraintEnd_toStartOf="@id/sc_form_auto_function_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sc_form_auto_match_num"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Match #"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/round_rectangle_20"
            app:layout_constraintStart_toStartOf="@id/sc_form_auto_team_num"
            app:layout_constraintEnd_toEndOf="@id/sc_form_auto_team_num"
            app:layout_constraintTop_toBottomOf="@id/sc_form_auto_team_num" />

        <TextView
            android:id="@+id/sc_form_auto_function_label"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="Functions"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toEndOf="@id/sc_form_auto_team_num"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sc_form_auto_function_switch"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/sc_form_auto_function_label"
            app:layout_constraintEnd_toEndOf="@id/sc_form_auto_function_label"
            app:layout_constraintTop_toBottomOf="@id/sc_form_auto_function_label" />

        <!-- LINE PASS -->

        <TextView
            android:id="@+id/sc_form_auto_line_passed_label"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Passed the line"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sc_form_auto_line_passed_switch"
            app:layout_constraintTop_toTopOf="@id/sc_form_auto_loaded_counter_valuebox" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sc_form_auto_line_passed_switch"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_marginEnd="180dp"
            app:layout_constraintStart_toEndOf="@id/sc_form_auto_line_passed_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sc_form_auto_line_passed_label"
            app:layout_constraintBottom_toBottomOf="@id/sc_form_auto_line_passed_label" />

        <!-- LOADED POWERCELLS -->

        <TextView
            android:id="@+id/sc_form_auto_loaded_counter_valuebox"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="# Loaded"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/sc_form_auto_match_timer"
            app:layout_constraintStart_toEndOf="@id/sc_form_auto_line_passed_switch"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/circle" />

        <!-- POWERCELL COUNTERS -->

        <fragment class="com.evergreen.treetop.ui.fragments.form.SC_FormCountersFragment"
            android:id="@+id/sc_form_auto_counters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sc_form_auto_line_passed_label"
            tools:layout="@layout/fragment_powercell_counters_sc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>