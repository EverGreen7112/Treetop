<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOP BAR -->

        <TextView
            android:id="@+id/sc_form_teleop_match_timer"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_rectangle_15"
            android:gravity="center"
            android:text="mm:ss"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/sc_form_teleop_team_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sc_form_teleop_team_num"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_rectangle_20"
            android:gravity="center"
            android:text="Team #"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/sc_form_teleop_function_label"
            app:layout_constraintStart_toEndOf="@id/sc_form_teleop_match_timer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sc_form_teleop_match_num"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_rectangle_20"
            android:gravity="center"
            android:text="Match #"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/sc_form_teleop_team_num"
            app:layout_constraintStart_toStartOf="@id/sc_form_teleop_team_num"
            app:layout_constraintTop_toBottomOf="@id/sc_form_teleop_team_num" />

        <TextView
            android:id="@+id/sc_form_teleop_function_label"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Functions"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sc_form_teleop_team_num"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sc_form_teleop_function_switch"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintEnd_toEndOf="@id/sc_form_teleop_function_label"
            app:layout_constraintStart_toStartOf="@id/sc_form_teleop_function_label"
            app:layout_constraintTop_toBottomOf="@id/sc_form_teleop_function_label" />

        <!-- DEFENCE STOPWATCH -->

        <!-- ROTATION CONTROL -->

        <TextView
            android:id="@+id/sc_form_teleop_rotation_label"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:gravity="center"
            android:text="Rotation Control"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/sc_form_teleop_rotation_miss_decrement"
            app:layout_constraintEnd_toStartOf="@id/sc_form_teleop_rotation_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/sc_form_teleop_rotation_miss_value" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sc_form_teleop_rotation_switch"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toBottomOf="@id/sc_form_teleop_rotation_label"
            app:layout_constraintEnd_toStartOf="@id/sc_form_teleop_rotation_miss_value"
            app:layout_constraintStart_toEndOf="@id/sc_form_teleop_rotation_label"
            app:layout_constraintTop_toTopOf="@id/sc_form_teleop_rotation_label" />

        <TextView
            android:id="@+id/sc_form_teleop_rotation_miss_value"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="# Miss"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sc_form_teleop_rotation_switch"
            app:layout_constraintTop_toBottomOf="@+id/sc_form_teleop_function_switch" />

        <TextView
            android:id="@+id/sc_form_teleop_rotation_miss_decrement"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/round_rectangle_10"
            android:gravity="center"
            android:text="-"
            app:layout_constraintEnd_toEndOf="@id/sc_form_teleop_rotation_miss_value"
            app:layout_constraintStart_toStartOf="@id/sc_form_teleop_rotation_miss_value"
            app:layout_constraintTop_toBottomOf="@id/sc_form_teleop_rotation_miss_value" />

        <!-- POSITION CONTROL -->

        <TextView
            android:id="@+id/sc_form_teleop_position_label"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:gravity="center"
            android:text="Position Control"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/sc_form_teleop_position_miss_decrement"
            app:layout_constraintEnd_toStartOf="@id/sc_form_teleop_position_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/sc_form_teleop_position_miss_value" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sc_form_teleop_position_switch"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toBottomOf="@id/sc_form_teleop_position_label"
            app:layout_constraintEnd_toStartOf="@id/sc_form_teleop_position_miss_value"
            app:layout_constraintStart_toEndOf="@id/sc_form_teleop_position_label"
            app:layout_constraintTop_toTopOf="@id/sc_form_teleop_position_label" />

        <TextView
            android:id="@+id/sc_form_teleop_position_miss_value"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="# Miss"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sc_form_teleop_position_switch"
            app:layout_constraintTop_toBottomOf="@id/sc_form_teleop_rotation_miss_decrement" />


        <TextView
            android:id="@+id/sc_form_teleop_position_miss_decrement"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/round_rectangle_10"
            android:gravity="center"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/sc_form_teleop_position_miss_value"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="@id/sc_form_teleop_position_miss_value"
            app:layout_constraintTop_toBottomOf="@id/sc_form_teleop_position_miss_value"
            app:layout_constraintVertical_bias="0.095" />

        <TextView
            android:id="@+id/sc_form_end_defence_label"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginStart="36dp"
            android:gravity="center"
            android:text="Def."
            android:textSize="38sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/sc_form_end_defence_stopwatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sc_form_end_defence_stopwatch" />

        <TextView
            android:id="@+id/sc_form_end_defence_stopwatch"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/double_circle"
            android:gravity="center"
            android:text="ss.SS"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sc_form_end_defence_label"
            app:layout_constraintTop_toBottomOf="@+id/sc_form_teleop_position_miss_decrement" />

    <!-- BOTTOM COUNTERS-->

    <TextView
        android:id="@+id/sc_text_form_counters_bot_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Bot."
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sc_form_end_defence_stopwatch" />

    <TextView
        android:id="@+id/sc_text_form_counters_bot_hit_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Hit"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_bot_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_bot_label"
        app:layout_constraintEnd_toStartOf="@id/sc_text_form_counters_bot_miss_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_bot_hit_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_bot_hit_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_bot_hit_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_bot_hit_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_bot_miss_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Miss"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_bot_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_bot_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sc_text_form_counters_bot_miss_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_bot_miss_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_bot_miss_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_bot_miss_value" />

    <!-- OUTER COUNTERS -->

    <TextView
        android:id="@+id/sc_text_form_counters_out_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out."
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_bot_label" />

    <TextView
        android:id="@+id/sc_text_form_counters_out_hit_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Hit"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_out_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_out_label"
        app:layout_constraintEnd_toStartOf="@id/sc_text_form_counters_out_miss_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_out_hit_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_out_hit_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_out_hit_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_out_hit_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_out_miss_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Miss"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_out_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_out_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sc_text_form_counters_out_miss_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_out_miss_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_out_miss_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_out_miss_value" />

    <!-- INNER COUNTERS -->

    <TextView
        android:id="@+id/sc_text_form_counters_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In."
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_out_label" />

    <TextView
        android:id="@+id/sc_text_form_counters_in_hit_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Hit"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_in_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_in_label"
        app:layout_constraintEnd_toStartOf="@id/sc_text_form_counters_in_miss_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_in_hit_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_in_hit_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_in_hit_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_in_hit_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_in_miss_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Miss"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_in_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_in_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sc_text_form_counters_in_miss_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_in_miss_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_in_miss_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_in_miss_value" />

    <!-- LOADING BAY COUNTERS -->

    <TextView
        android:id="@+id/sc_text_form_counters_load_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load."
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_in_label" />

    <TextView
        android:id="@+id/sc_text_form_counters_load_hit_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Hit"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_load_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_load_label"
        app:layout_constraintEnd_toStartOf="@id/sc_text_form_counters_load_miss_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_load_hit_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_load_hit_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_load_hit_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_load_hit_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_load_miss_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Miss"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_load_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_load_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sc_text_form_counters_load_miss_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_load_miss_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_load_miss_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_load_miss_value" />

    <!-- COLLECTED COUNTERS -->

    <TextView
        android:id="@+id/sc_text_form_counters_coll_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coll."
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_load_label" />

    <TextView
        android:id="@+id/sc_text_form_counters_coll_hit_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Hit"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_coll_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_coll_label"
        app:layout_constraintEnd_toStartOf="@id/sc_text_form_counters_coll_miss_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_coll_hit_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_coll_hit_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_coll_hit_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_coll_hit_value" />

    <TextView
        android:id="@+id/sc_text_form_counters_coll_miss_value"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="# Miss"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/sc_text_form_counters_coll_label"
        app:layout_constraintBottom_toBottomOf="@id/sc_text_form_counters_coll_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sc_text_form_counters_coll_miss_decrement"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/round_rectangle_10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sc_text_form_counters_coll_miss_value"
        app:layout_constraintEnd_toEndOf="@id/sc_text_form_counters_coll_miss_value"
        app:layout_constraintStart_toStartOf="@id/sc_text_form_counters_coll_miss_value" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>